
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Layout.cshtml";
}

<!-- Carousel Start -->
@await Component.InvokeAsync("_DefaultCarouselComponent")

<!-- Carousel End -->
<!-- Features Start -->
@await Component.InvokeAsync("_DefaultFeatureComponent")
<!-- Features End -->
<!-- About Start -->
@await Component.InvokeAsync("_DefaultAboutComponent")
<!-- About End -->
<!-- Fact Counter -->
<div class="container-fluid counter bg-secondary py-5">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-thumbs-up fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">@ViewBag.UserCount</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Toplam Kullanıcı</h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.3s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-car-alt fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">@ViewBag.CarCount</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Araç Sayısı</h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.5s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">@ViewBag.ManagerCount</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Toplam Müşteri Danışmanı</h4>
                </div>
            </div>
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.7s">
                <div class="counter-item text-center">
                    <div class="counter-item-icon mx-auto">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                    <div class="counter-counting my-3">
                        <span class="text-white fs-2 fw-bold" data-toggle="counter-up">@ViewBag.BookingCount</span>
                        <span class="h1 fw-bold text-white">+</span>
                    </div>
                    <h4 class="text-white mb-0">Toplam Rezervasyon</h4>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Fact Counter -->
<!-- Services Start -->
@await Component.InvokeAsync("_DefaultServiceComponent")
<!-- Services End -->
<!-- Car categories Start -->
@await Component.InvokeAsync("_CarCategoriesComponent")
<!-- Car categories End -->
<!-- Car Steps Start -->
@await Component.InvokeAsync("_DefaultProcessComponent")
<!-- Car Steps End -->
<br />
<!-- Banner Start -->
<div class="container-fluid banner pb-5 wow zoomInDown" data-wow-delay="0.1s">
    <div class="container pb-5">
        <div class="banner-item rounded">
            <img src="~/Cental-1.0.0/img/banner-1.jpg" class="img-fluid rounded w-100" alt="">
            <div class="banner-content">
                <h2 class="text-primary">Araç Kiralayın</h2>
                <h1 class="text-white">Araç Kiralamak mı İstiyorsunuz?</h1>
                <p class="text-white">Tereddüt etmeyin, bize hemen mesaj gönderin.</p>
                <div class="banner-btn">
                    <a href="#" class="btn btn-secondary rounded-pill py-3 px-4 px-md-5 me-2">WhatchApp</a>
                    <a href="#" class="btn btn-primary rounded-pill py-3 px-4 px-md-5 ms-2">Bize Ulaşın</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner End -->
<!-- Team Start -->
@await Component.InvokeAsync("_DefaultManagerComponent")
<!-- Team End -->
<!-- Testimonial Start -->
@await Component.InvokeAsync("_DefaultTestimonialComponent")
<!-- Testimonial End -->

