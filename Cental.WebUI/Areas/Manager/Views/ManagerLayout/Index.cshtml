@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Cental | Manager Paneli</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="Phoenixcoded" />
    <link rel="icon" href="~/flat-able-admin/dist/assets/images/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="~/flat-able-admin/dist/assets/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<body class="">
    <!-- [ Pre-loader ] start -->
    <div class="loader-bg" style="display: none;">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <!-- [ Pre-loader ] End -->
    @await Component.InvokeAsync("_ManagerLayoutSidebarComponent")

    <!-- [ Header ] start -->
    <header class="navbar pcoded-header navbar-expand-lg navbar-light header-dark">
        <div class="m-header">
            <a class="mobile-menu" id="mobile-collapse" href="#!"><span></span></a>
            <a href="#!" class="b-brand">
                <img src="~/flat-able-admin/dist/assets/images/logo.png" alt="" class="logo">
                <img src="~/flat-able-admin/dist/assets/images/logo-icon.png" alt="" class="logo-thumb">
            </a>
            <a href="#!" class="mob-toggler">
                <i class="feather icon-more-vertical"></i>
            </a>
        </div>
    </header>
    <!-- [ Header ] end -->
    <!-- [ Main Content ] start -->
    <div class="pcoded-main-container">
        <div class="pcoded-content">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-12">
                            <div class="page-header-title">
                                <h5 class="m-b-10">@ViewData["Title"]</h5>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#"><i class="feather icon-home"></i></a></li>
                                <li class="breadcrumb-item"><a href="#">@ViewData["Title"]</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-body">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ Main Content ] end -->
    <!-- Warning Section start -->
    <!-- Older IE warning message -->
    <!--[if lt IE 11]>
        <div class="ie-warning">
            <h1>Warning!!</h1>
            <p>You are using an outdated version of Internet Explorer, please upgrade</p>
        </div>
    <![endif]-->
    <!-- Required Js -->
    <script src="~/flat-able-admin/dist/assets/js/vendor-all.min.js"></script>
    <script src="~/flat-able-admin/dist/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/flat-able-admin/dist/assets/js/pcoded.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // MutationObserver kodu ile istenmeyen öğeleri hemen gizle
        setTimeout(() => {
            const observer = new MutationObserver((mutationsList) => {
                for (const mutation of mutationsList) {
                    for (const node of mutation.addedNodes) {
                        if (!(node instanceof HTMLElement)) continue;

                        // Gizlemek istediğimiz öğeler
                        if (node.classList?.contains('fixed-button') && node.classList?.contains('active')) {
                            console.log('Gizlenecek öğe:', node);
                            node.style.display = 'none'; // Hemen gizle
                        }

                        const found = node.querySelector?.('.fixed-button.active');
                        if (found) {
                            console.log('İçeride bulunan öğe:', found);
                            found.style.display = 'none'; // İçerideki öğeyi gizle
                        }
                    }
                }
            });

            observer.observe(document.body, { childList: true, subtree: true });

            console.log('Observer çalışıyor...');
        }, 1000);  // 1 saniye sonra çalıştır
    </script>

</body>

</html>
