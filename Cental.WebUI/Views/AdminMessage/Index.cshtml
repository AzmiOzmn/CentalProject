@using Cental.DtoLayer.MessageDtos
@model List<ResultMessageDto>
@{
    ViewData["Title"] = "Mesajlar";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}


<h2>Okunmamış Mesajlar</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Gönderen</th>
            <th>Mail</th>
            <th>Konu</th>
            <th>Yorum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.Comment</td>
                <td>
                    <a href="/AdminMessage/MessageDetail/@item.MessageId" class="btn btn-primary btn-sm">Detay</a>
                    <a href="/AdminMessage/DeleteMessage/@item.MessageId" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>


