@model List<ResultUserDto>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count= 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Email</th>
        <th>Roller</th>
        <th>Rol Ata</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.FullName</th>
            <th>@item.UserName</th>
            <th>@item.Email</th>
            <th>
            @foreach (var role in item.Roles)
            {
                    <span class="badge badge-info">  @role</span> <br />
            }
            </th>
            
            <th>
               
                <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-assign"></i>Rol Ata</a>
            </th>

        </tr>
    }
</table>



