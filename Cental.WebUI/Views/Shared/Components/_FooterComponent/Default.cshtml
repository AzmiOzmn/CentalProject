@model List<FooterContact>
@* _FooterComponent *@

<div class="container-fluid footer py-5 wow fadeIn" data-wow-delay="0.2s">
    <div class="container py-5">
        <div class="row g-5">
            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">İletişim</h4>
                    @foreach(var item in Model)
                    {


                        <p class="mb-3">@item.Description</p>
                    }
                    <div class="position-relative mb-3">
                        <input class="form-control rounded-pill w-100 py-3 ps-4 pe-5" type="text" placeholder="Enter your email">
                        <button type="button" class="btn btn-secondary rounded-pill position-absolute top-0 end-0 py-2 mt-2 me-2">Subscribe</button>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Hızlı Bağlantılar</h4>
                    <a href="/About/Index"><i class="fas fa-angle-right me-2"></i> Hakkımızda</a>
                    <a href="/Car/Index"><i class="fas fa-angle-right me-2"></i> Araçlar</a>
                    <a href="#"><i class="fas fa-angle-right me-2"></i>Hizmetler</a>
                    <a href="/Contact/Index"><i class="fas fa-angle-right me-2"></i> İletişim</a>
                    <a href="/Login/Index"><i class="fas fa-angle-right me-2"></i>Giriş Yap</a>
                    <a href="/Register/SignUp"><i class="fas fa-angle-right me-2"></i>Üye Ol</a>
                </div>
            </div>

            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Çalışma Saatlerimiz</h4>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Pzt-Cum:</h6>
                        <p class="text-white mb-0">09.00 - 19.00 arası</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Cumartesi:</h6>
                        <p class="text-white mb-0">10.00 - 17.00 arası</p>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted mb-0">Tatil:</h6>
                        <p class="text-white mb-0">Pazar günleri tatil.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-6 col-xl-3">
                <div class="footer-item d-flex flex-column">
                    <h4 class="text-white mb-4">Contact Info</h4>
                    @foreach(var value in Model)
                    {
                        
                    
                    <a href="#"><i class="fa fa-map-marker-alt me-2"></i>Esenler , İstanbul/Türkiye </a>
                    <a href="#"><i class="fas fa-envelope me-2"></i> @value.Email</a>
                    <a href="tel:@value.PhoneNumber"><i class="fas fa-phone me-2"></i> @value.PhoneNumber</a>
                    <a href="tel:@value.FaxNumber" class="mb-3"><i class="fas fa-print me-2"></i> @value.FaxNumber</a>
                    }

                    <div class="d-flex">
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="#"><i class="fab fa-facebook-f text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="#"><i class="fab fa-twitter text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-3" href="#"><i class="fab fa-instagram text-white"></i></a>
                        <a class="btn btn-secondary btn-md-square rounded-circle me-0" href="#"><i class="fab fa-linkedin-in text-white"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
